<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?define ProductName = "DIS Verification GenAI" ?>
  <?define ProductShortName = "dis-verification-genai" ?>
  <?define ProductVersion = "VERSION_PLACEHOLDER" ?>
  <?define Manufacturer = "Your Organization" ?>
  <?define UpgradeCode = "34c3ed39-12a4-44d1-b571-74e406f9beb1" ?>

  <Product Id="*"
           Name="$(var.ProductName)"
           Language="1033"
           Version="$(var.ProductVersion)"
           Manufacturer="$(var.Manufacturer)"
           UpgradeCode="$(var.UpgradeCode)">

    <Package InstallerVersion="500"
             Compressed="yes"
             InstallScope="perMachine"
             Description="$(var.ProductName) Installer"
             Comments="AI-powered verification and test plan generation system"
             Manufacturer="$(var.Manufacturer)"
             Platform="x64" />

    <!-- Upgrade logic -->
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

    <MediaTemplate EmbedCab="yes" />

    <!-- Properties -->
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    <Property Id="ARPHELPLINK" Value="https://github.com/martinmanuel9/dis_verification_genai" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/martinmanuel9/dis_verification_genai" />

    <!-- Feature definition -->
    <Feature Id="ProductFeature" Title="DIS Verification GenAI" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="ScriptComponents" />
      <ComponentGroupRef Id="ShortcutComponents" />
    </Feature>

    <!-- UI -->
    <UIRef Id="WixUI_InstallDir" />
    <UIRef Id="WixUI_ErrorProgressText" />

  </Product>

  <!-- Directory structure -->
  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLFOLDER" Name="DIS Verification GenAI">
          <Directory Id="ScriptsFolder" Name="scripts" />
          <Directory Id="SrcFolder" Name="src" />
          <Directory Id="DataFolder" Name="data" />
        </Directory>
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="DIS Verification GenAI"/>
      </Directory>
      <Directory Id="DesktopFolder" Name="Desktop" />
    </Directory>
  </Fragment>

  <!-- Components -->
  <Fragment>
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component Id="MainFiles" Guid="A1B2C3D4-E5F6-4A5B-9C8D-7E6F5A4B3C2D" Win64="yes">
        <File Id="DockerComposeFile"
              Source="..\..\docker-compose.yml"
              KeyPath="yes" />
        <File Id="VersionFile"
              Source="..\..\VERSION" />
        <File Id="ChangelogFile"
              Source="..\..\CHANGELOG.md" />
        <File Id="EnvTemplate"
              Source="..\..\\.env.template" />
        <File Id="ReadmeFile"
              Source="..\..\README.md" />
      </Component>
    </ComponentGroup>

    <ComponentGroup Id="ScriptComponents" Directory="ScriptsFolder">
      <Component Id="ScriptFiles" Guid="B2C3D4E5-F6A7-4B5C-8D9E-6F7A8B9C0D1E" Win64="yes">
        <File Id="PullModelsScript" Source="..\..\scripts\pull-ollama-models.sh" KeyPath="yes" />
        <File Id="StartScript" Source="..\..\scripts\start.sh" />
        <File Id="StopScript" Source="..\..\scripts\stop.sh" />
      </Component>
    </ComponentGroup>

    <ComponentGroup Id="ShortcutComponents">
      <!-- Start Menu Shortcut -->
      <Component Id="ApplicationShortcut" Directory="ApplicationProgramsFolder" Guid="*">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="DIS Verification GenAI"
                  Description="Launch DIS Verification GenAI Web Interface"
                  Target="[System64Folder]cmd.exe"
                  Arguments='/k "cd /d [INSTALLFOLDER] &amp;&amp; docker compose up -d &amp;&amp; start http://localhost:8501"'
                  WorkingDirectory="INSTALLFOLDER" />
        <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU"
                       Key="Software\[Manufacturer]\[ProductName]"
                       Name="installed"
                       Type="integer"
                       Value="1"
                       KeyPath="yes"/>
      </Component>

      <!-- Desktop Shortcut (optional) -->
      <Component Id="DesktopShortcut" Directory="DesktopFolder" Guid="*">
        <Shortcut Id="ApplicationDesktopShortcut"
                  Name="DIS Verification GenAI"
                  Description="Launch DIS Verification GenAI Web Interface"
                  Target="[System64Folder]cmd.exe"
                  Arguments='/k "cd /d [INSTALLFOLDER] &amp;&amp; docker compose up -d &amp;&amp; start http://localhost:8501"'
                  WorkingDirectory="INSTALLFOLDER" />
        <RemoveFolder Id="CleanUpDesktopShortCut" On="uninstall"/>
        <RegistryValue Root="HKCU"
                       Key="Software\[Manufacturer]\[ProductName]"
                       Name="desktop_shortcut"
                       Type="integer"
                       Value="1"
                       KeyPath="yes"/>
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>
